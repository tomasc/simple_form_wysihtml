


$ ->
  editors = []

  $('div.wysihtml_editor').each (idx, wrapper) ->
    e = new wysihtml5.Editor(
      $(wrapper).find('textarea').get(0)
      toolbar: $(wrapper).find('div.toolbar').get(0)
      <%= SimpleFormWysihtml::WysihtmlInput.configuration.options.map{ |k,v| "#{k}: #{v}" }.join(', ') %>
    )
    editors.push(e)


